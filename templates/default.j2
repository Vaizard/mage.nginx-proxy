##
# Default server configuration
##

# Default http server (unencrypted)
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    include snippets/mage_http.conf;
}

# Default https server
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    ssl_certificate         /etc/letsencrypt/live/vaizard.xyz/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/vaizard.xyz/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/vaizard.xyz/chain.pem;
    include snippets/mage_secure.conf;

    root /var/www/html;
    index index.html index.htm  index.php index.nginx-debian.html;
    server_name _;
    include snippets/mage_defaults.conf;
}
